{
  "name": "federalist-uswds-jekyll",
  "version": "1.3.0",
  "scripts": {
    "build": "bundle exec jekyll build && npm run css:build",
    "css:build": "postcss --parser postcss-scss assets/css/styles.scss -o _site/assets/css/styles.css -u @csstools/postcss-sass autoprefixer",
    "css:watch": "postcss --parser postcss-scss assets/css/styles.scss -o _site/assets/css/styles.css -u @csstools/postcss-sass autoprefixer --watch",
    "clean": "bundle exec jekyll clean",
    "federalist": "npm run css:build",
    "htmlproofer": "bundle exec htmlproofer _site",
    "pa11y-ci:sitemap": "pa11y-ci --sitemap http://localhost:4000/sitemap.xml --sitemap-exclude \"/*.pdf\"  --sitemap-exclude \"/admin\"",
    "reset": "npx rimraf .git",
    "start": "concurrently \"bundle exec jekyll serve\" \"npm:css:watch\"",
    "start-detached": "bundle exec jekyll serve --detach"
  },
  "dependencies": {
    "netlify-cms": "^2.10.192",
    "uswds": "^2.13.1"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.0.1",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.5.0",
    "pa11y-ci": "^2.4.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-scss": "^4.0.5",
    "rimraf": "^3.0.2"
  }
}
